{
  "name": "stylelint-config-amp",
  "version": "0.0.2",
  "description": "stylelint config to enforce Accelerated Mobile Pages CSS restrictions",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tinovyatkin/stylelint-config-amp.git"
  },
  "keywords": [
    "stylelint",
    "stylelint-config",
    "amp",
    "mobile",
    "accelerated-mobile-pages"
  ],
  "author": "tinovyatkin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tinovyatkin/stylelint-config-amp/issues"
  },
  "homepage": "https://github.com/tinovyatkin/stylelint-config-amp#readme",
  "peerDependencies": {
    "stylelint": "^7.6.0"
  },
  "scripts": {
    "ava": "ava --verbose \"__tests__/**/*.js\"",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail",
    "lint": "npm-run-all --parallel lint:*",
    "pretest": "npm run lint",
    "release": "npmpub",
    "test": "npm run ava"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-preset-env": "0.0.9",
    "eslint": "^3.1.1",
    "eslint-config-stylelint": "^5.0.0",
    "npm-run-all": "^3.0.0",
    "npmpub": "^3.0.1",
    "remark-cli": "^2.0.0",
    "remark-preset-lint-consistent": "^1.0.0",
    "remark-preset-lint-recommended": "^1.0.0",
    "stylelint": "^7.6.0"
  },
  "eslintConfig": {
    "extends": [
      "stylelint"
    ]
  },
  "remarkConfig": {
    "presets": [
      "lint-recommended",
      "lint-consistent"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}