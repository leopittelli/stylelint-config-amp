  "scripts": {
    "release": "npmpub",
    "test": "jest && eslint *.js --ignore-path .gitignore && remark . --quiet --frail"
  },
  "devDependencies": {
    "eslint": "^3.11.1",
    "eslint-config-stylelint": "^6.0.0",
